<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/toolbarbg"
        app:title="Post Free Ad"
        app:titleTextColor="#ffffff"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:src="@drawable/category_details_icon"
        android:padding="8dp"/>
        <TextView
            android:id="@+id/text_category"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:tooltipText="category"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
    <TextView
        android:id="@+id/text_sub_category"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:tooltipText="subcategory"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:src="@drawable/ad_details_icon"
        android:padding="8.2dp"/>

    <EditText
    android:id="@+id/edittext_brand_name"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:hint="Brand name"
    android:padding="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:inputType="text"/>

    <EditText
        android:id="@+id/edittext_year"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Year of Registration"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="text"/>
    <EditText
        android:id="@+id/edittext_km"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Kms completed"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="text"/>
    <EditText
        android:id="@+id/edittext_base_price"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Base Price"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="text"/>
    <EditText
        android:id="@+id/edittext_owner_numbers"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Number Of Owners"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:inputType="textMultiLine"
        android:maxLength="30"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Describe your Product"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

    </Spinner>
    <ImageButton
        android:id="@+id/btn_image_postad"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/add_photos"
        android:layout_margin="10dp"
        android:paddingTop="50dp"
        android:paddingBottom="60dp"
       />
    <TextView
        android:id="@+id/txt_contact_info"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:paddingLeft="12dp"
        android:text="Your Contact Infromation"
        android:tooltipText="subcategory"/>

    <TextView
        android:id="@+id/txt_address_input"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="12dp"
        android:tooltipText="subcategory"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/toolbarbg"
        android:text="POST AD"
        android:fontFamily="Century Gothic"
        android:textColor="#ffffff"/>
    </LinearLayout>
</ScrollView>