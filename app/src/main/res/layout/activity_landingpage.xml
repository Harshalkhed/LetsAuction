<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/landingpagebg"
     >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/toolbarbg"
        app:title="@string/app_name"
        app:titleTextColor="#ffffff"

        />

    <com.arlib.floatingsearchview.FloatingSearchView
        android:id="@+id/floating_search_view"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:floatingSearch_close_search_on_keyboard_dismiss="true"
        app:floatingSearch_searchHint="Search..."
        app:floatingSearch_showSearchKey="false"
        app:floatingSearch_suggestionsListAnimDuration="250" />

    <GridLayout
        android:id="@+id/grid_layout_ld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="3"
        android:layout_marginBottom="1dp"
        android:background="#ffffff"
        android:paddingStart="1dp"
        android:paddingTop="1dp"
        android:paddingLeft="1dp"

        >

        <ImageButton
            android:id="@+id/electronics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:background="@color/transparent"
            android:src="@drawable/electronics"
            android:contextClickable="true"

            />
        <ImageButton
            android:id="@+id/mobiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:background="@color/transparent"
            android:src="@drawable/mobiles"
            android:contextClickable="true"

            />
        <ImageButton
            android:id="@+id/Furniture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:background="@color/transparent"
            android:src="@drawable/furniture"
            android:contextClickable="true"

            />
        <ImageButton
            android:id="@+id/cars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:background="@color/transparent"
            android:src="@drawable/cars"
            android:contextClickable="true"

            />
        <ImageButton
            android:id="@+id/bikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:background="@color/transparent"
            android:src="@drawable/bikes"
            android:contextClickable="true"

            />
        <ImageButton
            android:id="@+id/antiques"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:background="@color/transparent"
            android:src="@drawable/antiques"
            android:contextClickable="true"

            />
        <ImageButton
            android:id="@+id/realestates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:background="@color/transparent"
            android:src="@drawable/realestates"
            android:padding="6dp"
            android:contextClickable="true"

            />
        <ImageButton
            android:id="@+id/office_equipments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:background="@color/transparent"
            android:src="@drawable/officeequipments"
            android:contextClickable="true"

            />
        <ImageButton
            android:id="@+id/sports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:background="@color/transparent"
            android:src="@drawable/sports"
            android:contextClickable="true"

            />
        <ImageButton
            android:id="@+id/watches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:background="@color/transparent"
            android:src="@drawable/watches"
            android:contextClickable="true"

            /><ImageButton
        android:id="@+id/jwellery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:background="@color/transparent"
        android:src="@drawable/jwellery"
        android:contextClickable="true"

        />
        <ImageButton
            android:id="@+id/stationery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:background="@color/transparent"
            android:src="@drawable/stationery"
            android:padding="10dp"
            android:contextClickable="true"

            />
    </GridLayout>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="wrap_content">
       <ExpandableListView

           android:id="@+id/expandableListView"
           android:layout_height="match_parent"
           android:layout_width="match_parent"
           android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
           android:divider="@android:color/darker_gray"
           android:dividerHeight="2dp" />
           <ExpandableListView

               android:id="@+id/expandableListView2"
               android:layout_height="match_parent"
               android:layout_width="match_parent"
               android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
               android:divider="@android:color/darker_gray"
               android:dividerHeight="2dp" />
       </LinearLayout>
   </ScrollView>
</LinearLayout>
    <include layout="@layout/activity_bottom_navigation"/>
</android.support.design.widget.CoordinatorLayout>