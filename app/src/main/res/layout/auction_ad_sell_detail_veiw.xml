<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/crd_auction_sell_txt_personname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:hint="Name of person"
        android:textSize="25dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/crd_auction_sell_txt_bidamt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:hint="Bid given"
        android:textSize="25dp"
        android:padding="10dp"/>
    <Button
        android:id="@+id/crd_auction_sell_btn"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:background="@drawable/letsauction"
        android:layout_gravity="right"
        android:padding="10dp"
        />
</LinearLayout>
</android.support.v7.widget.CardView>