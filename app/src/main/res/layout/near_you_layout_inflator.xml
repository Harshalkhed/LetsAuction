<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp">

    <!--<ImageView-->
        <!--android:id="@+id/auction_detail_product_img"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/auction_nearyou_product_name"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:hint="Product name"
                android:layout_gravity="left"/>
            <TextView
            android:id="@+id/auction_nearyou_bid_place_time"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:hint="Time added"
            android:layout_gravity="left"/>

            <TextView
                android:id="@+id/auction_nearyou_base_price"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:layout_gravity="left"
                android:hint="Baseprice" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/auction_nearyou_btn_bidnow"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/bid_now_btn_icon"
                android:layout_gravity="right"/>

        </LinearLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>